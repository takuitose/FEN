<div class="container">
  <div class="row">

    <div class="col-8">
      <div class="row">

        <div class="col-6">
          <%= image_tag @spot.get_image %>
        </div>

        <div class="col-5">

          <div class="row my-2">
            <h4><%= @spot.member.name %></h4>
          </div>

          <div class="row justify-content-between my-2">
            <h4 class="col-2"><%= @spot.title %></h4>
            <h4 class="col-2"><%= @spot.tag.name %></h4>
          </div>

          <div class="row my-2">
            <p><%= @spot.description %></p>
          </div>

          <div class="row">
            <p><%= @spot.address %></p>
          </div>

          <div class="row">
            <p><%= @spot.created_at %></p>
          </div>

        </div>

      </div>
    </div>

    <div class="col-4">

    </div>

  </div>
</div>