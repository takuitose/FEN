<div class="container">
  <div class="d-flex justify-content-between my-4">
    
  </div>
  
  <table class="table">
    <thead class="bg-light">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>MailAddress</th>
        <th>Spots</th>
        <th>Follow</th>
        <th>Follower</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>

      <% @members.each do |member| %>
      <tr>
        <td class="align-middle"><%= member.id %></td>
        <td class="align-middle">
          <%= link_to admin_member_path(member.id) do %>
          <%= member.name %>
          <% end %>
        </td>

        <td class="align-middle"><%= member.email %></td>
        <td class="align-middle">
          <% if ! %>
          <p class="text-success">有効</p>
           <% else %>
          <p class="text-muted">退会</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>